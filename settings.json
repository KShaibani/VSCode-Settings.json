
{
	//Theme
    "workbench.colorTheme": "Monokai Pro",
    "workbench.iconTheme": "Monokai Pro Icons",

    "csharp.format.enable": false,
    
	//font
    "editor.fontFamily": "'Fira Code'",
    "editor.fontLigatures": true,
    "editor.fontSize": 16,

	//vs code Window and title.
    "window.menuBarVisibility": "default",
    "window.titleBarStyle": "custom",
    "window.title": "${dirty}${activeEditorShort}${separator}${rootName}",

	// for unity files.
    "files.exclude":
    {
        "**/.DS_Store":true,
        "**/.git":true,
        "**/.gitignore":true,
        "**/.gitmodules":true,
        "**/*.booproj":true,
        "**/*.pidb":true,
        "**/*.suo":true,
        "**/*.user":true,
        "**/*.userprefs":true,
        "**/*.unityproj":true,
        "**/*.dll":true,
        "**/*.exe":true,
        "**/*.pdf":true,
        "**/*.mid":true,
        "**/*.midi":true,
        "**/*.wav":true,
        "**/*.gif":true,
        "**/*.ico":true,
        "**/*.jpg":true,
        "**/*.jpeg":true,
        "**/*.png":true,
        "**/*.psd":true,
        "**/*.tga":true,
        "**/*.tif":true,
        "**/*.tiff":true,
        "**/*.3ds":true,
        "**/*.3DS":true,
        "**/*.fbx":true,
        "**/*.FBX":true,
        "**/*.lxo":true,
        "**/*.LXO":true,
        "**/*.ma":true,
        "**/*.MA":true,
        "**/*.obj":true,
        "**/*.OBJ":true,
        "**/*.asset":true,
        "**/*.cubemap":true,
        "**/*.flare":true,
        "**/*.mat":true,
        "**/*.meta":true,
        "**/*.prefab":true,
        "**/*.unity":true,
		
        "build/":true,
        "Build/":true,
        "Library/":true,
        "library/":true,
        "obj/":true,
        "Obj/":true,
        "ProjectSettings/":true,
        "temp/":true,
        "Temp/":true,
        ".vs/":true,
        ".vscode":true,
        "Packages":true,
        "UIElementsSchema":true,
        "UMotionData":true,
		"**/*.mixer":true,

        //hide files inside Assets folder.
        "Assets/Models":true,
        "Assets/EngyneCreations":true,
        "Assets/Gizmos":true,
        "Assets/fx":true,
        "Assets/Scenes":true,
        "Assets/Settings":true,
        "Assets/yaSingleton":true,
        "Assets/DebugDrawingExtension":true,
        "Assets/Audio":true,
        "Assets/Animation":true,
		
		
        ".gitattributes":true,
        "**/*.csproj": true,
        "**/*.sln":true

    },
	
    "git.confirmSync": false,
    "team.showWelcomeMessage": false,
    
	
	//line Highlight.
    "editor.renderLineHighlight": "all",
	
	//command Palette history default : 50.
    "workbench.commandPalette.history": 100,
    
}