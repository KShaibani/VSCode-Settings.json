{
	//Theme
    "workbench.colorTheme": "Monokai Pro",
    
	//icon
    "workbench.iconTheme": "vscode-icons",

    "csharp.format.enable": false,
    
	//font
    "editor.fontFamily": "'Fira Code'",
    "editor.fontLigatures": true,
    "editor.fontSize": 15,

	//vs code Window and title.
    "window.menuBarVisibility": "default",
    "window.titleBarStyle": "custom",
    "window.title": "${dirty}${activeEditorShort}${separator}${rootName}",


    "git.confirmSync": false,
    //"team.showWelcomeMessage": false,
    
	//editor line Highlight.
    "editor.renderLineHighlight": "all",
	
	//Command Palette history default : 50.
    "workbench.commandPalette.history": 100,
    
    //Hide Recommended Extensions 
    "extensions.showRecommendationsOnlyOnDemand": true,
    "explorer.openEditors.visible": 0,

    //unsaved files are remembered between sessions
    "files.hotExit": "onExit",
    
	"editor.showFoldingControls": "always",
    "editor.lineNumbers": "on",
    "editor.cursorWidth": 2,
	
	//Customizing IntelliSense
    "bracketPairColorizer.showHorizontalScopeLine": false,
    "editor.quickSuggestionsDelay": 1,
    "editor.smoothScrolling": true,
    "editor.suggestFontSize": 12,
    "editor.suggestOnTriggerCharacters": true,
    "editor.suggest.localityBonus": true,
    "editor.wordBasedSuggestions": true,

    "workbench.colorCustomizations": {
        "editor.selectionBackground": "#b5c585",
        "editor.selectionHighlightBackground": "#20879e",
        //"editor.selectionHighlightBorder": "#c2bdbd",
        "editor.selectionForeground": "#ffffff"

    },

	
	
	
    
	// for unity files.
    "files.exclude":
    {
        "**/.DS_Store":true,
        "**/.git":true,
        "**/.gitignore":true,
        "**/.gitmodules":true,
        "**/*.booproj":true,
        "**/*.pidb":true,
        "**/*.suo":true,
        "**/*.user":true,
        "**/*.userprefs":true,
        "**/*.unityproj":true,
        "**/*.dll":true,
        "**/*.exe":true,
        "**/*.pdf":true,
        "**/*.mid":true,
        "**/*.midi":true,
        "**/*.wav":true,
        "**/*.gif":true,
        "**/*.ico":true,
        "**/*.jpg":true,
        "**/*.jpeg":true,
        "**/*.png":true,
        "**/*.psd":true,
        "**/*.tga":true,
        "**/*.tif":true,
        "**/*.tiff":true,
        "**/*.3ds":true,
        "**/*.3DS":true,
        "**/*.fbx":true,
        "**/*.FBX":true,
        "**/*.lxo":true,
        "**/*.LXO":true,
        "**/*.ma":true,
        "**/*.MA":true,
        "**/*.obj":true,
        "**/*.OBJ":true,
        "**/*.asset":true,
        "**/*.cubemap":true,
        "**/*.flare":true,
        "**/*.mat":true,
        "**/*.meta":true,
        "**/*.prefab":true,
        "**/*.unity":true,
        "**/*.csproj": true,
        "**/*.sln":true,
		
        "build/":true,
        "Build/":true,
        "Library/":true,
        "library/":true,
        "obj/":true,
        "Obj/":true,
        "ProjectSettings/":true,
        "temp/":true,
        "Temp/":true,
        ".vs/":true,
        ".vscode":true,
        "Packages":true,
        "UIElementsSchema":true,
        "UMotionData":true,
        "**/*.mixer":true,

        //hide files inside Assets folder.
        "Assets/Scenes":true,
        ".gitattributes":true,
        "**/*.collabignore":true

    }
	
	
	
	
}